.container

  #login 
    .row-fuild
      .span5.offset3
        form.form-horizontal.well(method="post", action="#{basepath}/login")
          fieldset
            legend Login to Nohm Backend

            .control-group
              label.control-label(for="user") Login
              .controls
                input.input-large(type="text", id="user", name="user")

            .control-group
              label.control-label(for="password") Password
              .controls
                input.input-large(type="password", id="password", name="password")

            .form-actions
              button.btn.btn-primary(type="submit") Login

